# =============================================================================
# SUPABASE CONFIGURATION
# Get these from your Supabase project dashboard: https://app.supabase.com
# =============================================================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# AI SERVICES
# =============================================================================
# Hugging Face (Recommended - Unified API for multiple models including Claude)
# Get from https://huggingface.co/settings/tokens
EXPO_PUBLIC_HUGGINGFACE_API_KEY=hf_your-huggingface-key-here

# OpenAI - Get from https://platform.openai.com/api-keys (Optional fallback)
EXPO_PUBLIC_OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic Claude - Get from https://console.anthropic.com/ (Optional fallback)
EXPO_PUBLIC_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# SOCIAL MEDIA OAUTH (Required for social platform connections)
# =============================================================================
# Twitter/X - Get from https://developer.twitter.com/
EXPO_PUBLIC_TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn - Get from https://www.linkedin.com/developers/
EXPO_PUBLIC_LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook/Meta - Get from https://developers.facebook.com/
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Instagram - Uses Facebook credentials (same Meta app)
EXPO_PUBLIC_INSTAGRAM_CLIENT_ID=your-instagram-client-id

# =============================================================================
# EMAIL SERVICE (Required for email marketing features)
# =============================================================================
# Resend - Get from https://resend.com/
RESEND_API_KEY=re_your-resend-key-here

# =============================================================================
# PAYMENTS (Required for billing features)
# =============================================================================
# Stripe - Get from https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret

# =============================================================================
# APP CONFIGURATION
# =============================================================================
EXPO_PUBLIC_APP_URL=http://localhost:8081
EXPO_PUBLIC_APP_NAME=Marketing Hub
